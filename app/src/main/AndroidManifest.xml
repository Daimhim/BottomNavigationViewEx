<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:node="replace"
    package="com.ittianyu.bottomnavigationviewexsample">

    <application
        android:name=".common.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.style.StyleActivity" />
        <activity
            android:name=".features.viewpager.WithViewPagerActivity" />
        <activity
            android:name=".features.setupwithviewpager.SetupWithViewPagerActivity" />
        <activity android:name=".features.badgeview.BadgeViewActivity"/>
        <activity android:name=".features.centerfab.CenterFabActivity"/>
        <meta-data
            tools:node="replace"
            android:name="android.support.VERSION"
            android:value="25.4.0" />
    </application>

</manifest>